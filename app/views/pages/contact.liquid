{% extends 'layouts/default' %}
{% block content %}
    {% model_form 'customer_messages', success: '/', error: '/contact' %}





<div class="container">
       <div class="row">
        <div class="col-lg-6">

            <form>
                <fieldset>
                <legend>Contact us</legend>
                <div class="form-group has-error text-danger">
                            {% if customer_message.errors %}
                                <p>Please correct these errors:</p>
                                <ul>
                                {% for error in customer_message.errors %}
                                  <li>{{error[0] | capitalize}} -  {{error[1]}}</li>
                                {% endfor %}
                                </ul>
                            {% endif %}
                            </div>
                    <div class="form-group">
                        <label for="inputName" control-label">Name</label>
                            <input class="form-control" type="text" name="content[name]" value="{{customer_message.name}}">
                    </div>

                     <div class="form-group">
                         <label for="inputEmail"  control-label">Email</label>

                               <input class="form-control" id="inputEmail" placeholder="Email" type="text" name="content[email]" value="{{customer_message.email}}">
                     </div>

                     <div class="form-group">
                        <label for="textArea" control-label">Message</label>
                            <textarea class="form-control" rows="3" placeholder="Your message here..." id="textArea" name="content[message]">{{customer_message.message}}</textarea>
                     </div>

                     <div class="form-group">
                        <button type="submit" class="btn btn-primary">Submit</button>
                     </div>

                </fieldset>
            </form>


        </div>
    </div>
</div>


    {% endmodel_form %}
{% endblock %}

